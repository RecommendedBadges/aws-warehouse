{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["bin/**/*.ts", "lib/**/*.ts", "lambda/**/*.ts", "**/*.ts"]
}
